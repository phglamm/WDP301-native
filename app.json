{
  "expo": {
    "name": "CampusMedix",
    "slug": "campusmedix",
    "scheme": "campusmedix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon-background.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.campusmedix.app",
      "supportsTablet": true,
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "campusmedix.payment",
            "CFBundleURLSchemes": ["campusmedix"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.campusmedix.app",
      "permissions": [],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "campusmedix",
              "host": "*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router", "expo-image-picker"],
    "assetBundlePatterns": ["**/*"],
    "fonts": {
      "Montserrat-Bold": "./assets/fonts/Montserrat-Bold.ttf",
      "Montserrat-Regular": "./assets/fonts/Montserrat-Regular.ttf",
      "Montserrat-SemiBold": "./assets/fonts/Montserrat-SemiBold.ttf",
      "Montserrat-Medium": "./assets/fonts/Montserrat-Medium.ttf",
      "Montserrat-Italic": "./assets/fonts/Montserrat-Italic.ttf",
      "Montserrat-SemiBoldItalic": "./assets/fonts/Montserrat-SemiBoldItalic.ttf"
    }
  }
}
